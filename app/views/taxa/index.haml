- content_for :script do
  = store_current_language_for_js()
    
= render :partial => "/shared/header", :locals => { :flash => flash, :title => 'Common Names for Higher Taxa'}
= render :partial => '/shared/nav', :locals => {:nav => [['Home', root_path]], :active => 'Home'}
= render :partial => "/shared/flash", :locals => { :flash => flash }
= render :partial => "/taxonomy_navigation/dropdowns"
          
.box.clear
#colLeft
  %h2.colored
    Common Names
  .boxed
    #names
      = render :partial => "list"
    #create
      -if current_user
        #create-new
          - form_tag '/', :id => "create_form" do
            = text_field_tag 'new-name'
            = submit_tag "Create", :class => "button"

#colRight
  %h2.colored
    Exemplary Photo
  #best-photo.boxed
    %img{:id => 'best'}

.box.clear
  %h2.colored
    Photos
  #spinner= image_tag 'loader.gif'
  #photos.boxed
    -(1..8).each do |x|
      %a{:href => '#', :class => 'exemplary'}
        %img{:id => "photo-#{x}", :src => ''}
  
.box.clear
  %h2.colored
    Stats
  =render :partial => "language/stats"