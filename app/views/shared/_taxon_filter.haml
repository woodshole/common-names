-# TAXON FILTER
.filters
  %p.in
    =t :current_filter
    %span#taxon-filter-val
      =t :none
  =image_tag 'plus_button.gif', :id => 'taxon_image'
  - if current_user
    .words
      &nbsp; 
      %a.filter.taxon{"href" => "common"}
        =t :common_names
      |
      %a.filter.taxon{"href" => "scientific"}
        =t :scientific_names
      |
      %a.filter.taxon{"href" => "none"}
        =t :none
  - else
    .words
      %p.no-margin
        &nbsp;
        =t :please_login