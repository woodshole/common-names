-# COMMON NAMES FILTER
.filters
  %p.in
    = t :current_filter
    %span#common-filter-val
      =t :all
  =image_tag 'plus_button.gif', :id => 'common_names_image'
  - if current_user
    .words
      &nbsp; 
      %a.filter.common{"href" => "only"}
        =t(:only) + " #{current_user.language.english_name}"
      |
      %a.filter.common{"href" => "all"}
        =t :all
  - else
    .words
      %p.no-margin
        &nbsp;
        =t :please_login