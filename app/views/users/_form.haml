%h2.colored
  Account Settings
.boxed
  %p.colored
    = form.label :language_id, 'Default Language'
  = render :partial => 'language/language_select' 
  %p.colored
    = form.label :email
  = form.text_field :email, :class => 'title'
  %p.colored
    = form.label :password, form.object.new_record? ? nil : "Change password"
  = form.password_field :password, :class => 'title'
  %p.colored
    = form.label :password_confirmation
  = form.password_field :password_confirmation, :class => 'title'
  .box.clear
  %button{:type => "submit", :name => "commit", :value => "Register", :class => 'button positive'} Save
  = link_to "Cancel", request.env["HTTP_REFERER"], :class => 'button'